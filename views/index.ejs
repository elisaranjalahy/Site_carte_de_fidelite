<!DOCTYPE html>
<html lang="fr">

<head>
    <!-- Configuration -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>RESMU</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!--CSS-->
    <link href="/style/index.css" rel="stylesheet">

</head>

<body>


    <!--MESSAGES D'ALERTE-->
    <% if (!sessionStart) { %>
        <script>alert("Vous allez être déconnecté.");
            setTimeout(function () {
                location.reload(); //rafraichit après avoir fermé la page => ramene à la page de connexion
            }, 300);
        </script>
        <% } %>
            <!--FIN DES MESSAGES D'ALERTE-->


            <div class="container-fluid">
                <div class="head">
                    <div
                        class="container-fluid d-flex flex-column flex-md-row justify-content-md-between align-items-md-center">
                        <!-- Section des informations -->
                        <div class="info d-flex align-items-center mb-3 mb-md-0">
                            <h3 class="pts">pts : <%= currentUser.points %>
                            </h3>
                            <h1 class="main-title text-center flex-grow-1 mb-0">RESMU<br>@<%= currentUser.pseudo %>
                            </h1>
                        </div>

                        <!-- Bouton de déconnexion -->
                        <div>
                            <form action="/deconnexion" method="POST">
                                <button type="submit" class="btn btn-danger">Se déconnecter</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Reste de votre contenu HTML ici -->
                <div class="row">
                    <!-- Colonne pour les cadeaux -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-title">Liste des cadeaux :</div>
                            <div class="card-body">
                                <div class="row">
                                    <!-- Boucle pour afficher les cadeaux -->
                                    <% if(sessionStart){ cadeaux.forEach(function(cadeau, i) { %>
                                        <div class="col-md-4">
                                            <ul>
                                                <li>
                                                    <h3 class="titre_cadeau">
                                                        <%=cadeau.nom_cadeau %> :
                                                    </h3>
                                                    <p class="point">
                                                        <%= cadeau.points_cadeau %> pts
                                                    </p>
                                                    <img class="imagecadeau" src="<%=cadeau.image_cadeau %>">
                                                    <div class="btn-container">
                                                        <!-- Conteneur pour centrer le bouton -->
                                                        <br>
                                                        <button class="btn btn-success">Ajouter au panier</button>
                                                        <br><br>
                                                        <!-- Bouton "Ajouter au panier" -->
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                        <% }); %>
                                            <%}%>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Colonne pour la panier (vide pour l'instant) -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-title">Panier :</div>
                        </div>
                    </div>
                </div>
            </div>

</body>

</html>